---
import AndorraMap from "../components/andorra-map.astro"
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
		<script src="/map.js" defer></script>
	</head>
	<body class="relative">
		<svg width="0" height="0" version="1.1" xmlns="http://www.w3.org/2000/svg">
			<style type="text/css">
				rect {
					fill: url(#lessfive);
				}
			</style>
			<defs>
				<linearGradient id="lessfive">
					<stop offset="5%" stop-color="#0373fc"></stop>
					<stop offset="95%" stop-color="#0f66d1"></stop>
				</linearGradient>
			</defs>
			<rect width="100" height="50"></rect>
		</svg>
		<svg width="0" height="0" version="1.1" xmlns="http://www.w3.org/2000/svg">
			<style type="text/css">
				rect {
					fill: url(#lesszero);
				}
			</style>
			<defs>
				<linearGradient id="lesszero">
					<stop offset="5%" stop-color="#13b5f0"></stop>
					<stop offset="95%" stop-color="#1094c4"></stop>
				</linearGradient>
			</defs>
			<rect width="100" height="50"></rect>
		</svg>
		<div class="p-[16px] absolute top-0 left-0" id="info-box">
			<h1></h1>
			<span id="temperature"></span>
		</div>
		<AndorraMap />
	</body>
</html>
